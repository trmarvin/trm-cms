    },
    "notes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::note.note",
      "inversedBy": "essays"
    },
    "thinkers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::thinker.thinker",
