      "default": "none",
      "enum": [
        "banner",
        "full-bleed",
        "inset",
        "none"
      ]
    },
    "aspect": {
      "type": "enumeration",
      "enum": [
        "ration 16:9",
        "ratio 3:2",
        "ratio 1:1",
        "ratio 4:5"
      ]
    },
    "focal_x": {
      "type": "decimal",
      "default": 0,
      "max": 1
